  "devDependencies": {
    "@sinonjs/referee-sinon": "^10.1.0",
    "@studio/changes": "^2.2.0",
    "@studio/eslint-config": "^6.0.0",
    "@studio/tsconfig": "^1.3.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib",
